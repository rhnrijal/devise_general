<p id="notice"><%= notice %></p>

<h1>Talents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Experience</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @talents.each do |talent| %>
      <tr>
        <td><%= talent.name %></td>
        <td><%= talent.experience %></td>
        <td><%= link_to 'Show', talent %></td>
        <td><%= link_to 'Edit', edit_talent_path(talent) %></td>
        <td><%= link_to 'Destroy', talent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if params[:sort_by] == "date" %>
  <%= link_to "Sort by name", :action => :create, :sort_by => :name %>
<% else %>
  <%= link_to "Sort by date", :action => :create, :sort_by => :date %>
<% end %>
<br>
<a href="/awards">Add award</a><br/>
<%= link_to 'New Talent', new_talent_path %>
