<!DOCTYPE html>
<html>
<head>
  <title>Talent</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<% if flash[:error] %>

  <div id="error">

    <%= flash[:error] %>

  </div>

<% end %>
<h4><%= link_to  "Home Page", root_path%></h4>
<div id="container">

  <div id="user_status">

    <% if user_signed_in? %>


      Welcome <%= link_to current_user.email, current_user %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
      <a href="/users/edit">Edit</a><br/>

      <a href="/talents">View Talent</a>
      <a href="/talents/new">Add Talent</a><br/>


      <a href="/awards">View Award</a>
      <a href="/awards/new">Add Award</a>




    <% else %>

      <%= link_to "Sign up", new_user_registration_path %> or

      <%= link_to "Sign in", new_user_session_path %>.

    <% end %>

  </div>

  <%= yield %>

</div>
</body>
</html>
