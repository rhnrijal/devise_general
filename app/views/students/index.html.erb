<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Studentid</th>
      <th>Name</th>
      <th>Sex</th>
      <th>Fos</th>
      <th>Nationality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.studentid %></td>
        <td><%= student.name %></td>
        <td><%= student.sex %></td>
        <td><%= student.fos %></td>
        <td><%= student.nationality %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if params[:sort_by] == "fos" %>
  <%= link_to "Sort by nationality", :action => :create, :sort_by => :nationality %>
<% else %>
  <%= link_to "Sort by fos", :action => :create, :sort_by => :fos %>
<% end %>
<br>

<%= link_to 'New Student', new_student_path %>
