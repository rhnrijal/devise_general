<%= form_with(model: award, local: true) do |form| %>
  <% if award.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(award.errors.count, "error") %> prohibited this award from being saved:</h2>

      <ul>
      <% award.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description,placeholder: "Eg. Description of the award"%>
  </div>

  <div class="field">
    <%= form.label :choose_a_cateogry %>
    <%= form.select :category, ['Academic', 'Sports', 'Music', 'Dancing', 'Singing']%>
  </div>
  <div class="field">
    <%= form.label :image %><br>
    <%= form.file_field :image %>
    <% if form.object.image? %>
      <%= image_tag form.object.image.url(:thumb) %>
      <%= form.label :remove_image %>
      <%= form.check_box :remove_image %>
      <%end%>
      </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
