<p id="notice"><%= notice %></p>
<br/>
<h1>Talent description</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Cateogry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.description %></td>
        <td><%= award.category %></td>
        <td><%= link_to 'Show', award %></td>
        <td><%= link_to 'Edit', edit_award_path(award) %></td>
        <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if params[:sort_by] == "description" %>
  <%= link_to "Sort by category", :action => :create, :sort_by => :category %>
<% else %>
  <%= link_to "Sort by description", :action => :create, :sort_by => :description %>
<% end %>
<br>
<%= link_to 'New Award', new_award_path %>
